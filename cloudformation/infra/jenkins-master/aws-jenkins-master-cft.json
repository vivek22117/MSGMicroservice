{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Create Jenkins EC2 Server with SecurityGroup",
  "Parameters": {
    "VPCStackName": {
      "Description": "VPC to refer",
      "Type": "String"
    },
    "KeyPairName": {
      "Default": "jenkins-master",
      "Description": "Key pair for ec2 instances",
      "Type": "String"
    },
    "InstanceType": {
      "Description": "WebServer EC2 instance type",
      "Type": "String",
      "Default": "t2.micro",
      "AllowedValues": [
        "t1.micro",
        "t2.nano",
        "t2.micro"
      ],
      "ConstraintDescription": "must be a valid EC2 instance type."
    },
    "Environment": {
      "Description": "Environment to which cft is created",
      "Type": "String",
      "Default": "devl"
    }
  },
  "Mappings": {
    "RegionAMI": {
      "us-east-1": {
        "Ubuntu": "ami-0ac019f4fcb7cb7e6",
        "Linux": "ami-013be31976ca2c322"
      }
    }
  },
  "Resources": {
    "JenkinsMasterSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Enable SSH access and HTTP, HTTPS only",
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${VPCStackName}-VPCId"
          }
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": 6,
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": 6,
            "FromPort": "443",
            "ToPort": "443",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": 6,
            "FromPort": 22,
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "SecurityGroupEgress": [
          {
            "IpProtocol": -1,
            "FromPort": 0,
            "ToPort": 65535,
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": "jenkins-master"
          },
          {
            "Key": "component",
            "Value": "double-digit-test"
          },
          {
            "Key": "environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "JenkinsMasterUbuntuEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Metadata": {
        "AWS::CloudFormation::Init": {
          "services": {
            "sysvint": {
              "codedeploy-agent": {
                "enabled": "true",
                "ensureRunning": "true"
              }
            }
          }
        }
      },
      "Properties": {
        "ImageId": {
          "Fn::FindInMap": [
            "RegionAMI",
            {
              "Ref": "AWS::Region"
            },
            "Ubuntu"
          ]
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "SecurityGroupIds": [
          {
            "Fn::GetAtt": [
              "JenkinsMasterSecurityGroup",
              "GroupId"
            ]
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash \n",
                "wget http://pkg.jenkins-ci.org/debian-stable/jenkins-ci.org.key \n",
                "apt-key add jenkins-ci.org.key \n",
                "echo 'deb http://pkg.jenkins-ci.org/debian binary/' > /etc/apt/sources.list.d/jenkins.list \n",
                "apt update\n",
                "apt -y upgrade\n",
                "# Install Java.\n",
                "apt -y install java-1.8.0-openjdk\n",
                "# Install Git.\n",
                "apt install -y jenkins\n",
                "apt install -y nginx\n",
                "'\n"
              ]
            ]
          }
        },
        "SubnetId": {
          "Fn::ImportValue": {
            "Fn::Sub": "${VPCStackName}-SubnetId-A"
          }
        },
        "KeyName": {
          "Ref": "KeyPairName"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "jenkins-master"
          },
          {
            "Key": "component",
            "Value": "double-digit-test"
          },
          {
            "Key": "environment",
            "Value": {
              "Ref": "Environment"
            }
          }
        ]
      }
    },
    "EC2EIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc"
      }
    },
    "AssociateControlPort": {
      "Type": "AWS::EC2::EIPAssociation",
      "DependsOn": "JenkinsMasterUbuntuEC2Instance",
      "Properties": {
        "AllocationId": {
          "Fn::GetAtt": [
            "EC2EIP",
            "AllocationId"
          ]
        },
        "InstanceId": {
          "Ref": "JenkinsMasterUbuntuEC2Instance"
        }
      }
    }
  },
  "Outputs": {
    "JenkinsMasterSG": {
      "Description": "The Security Group ID of Jenkins Master",
      "Value": {
        "Ref": "JenkinsMasterSecurityGroup"
      },
      "Export": {
        "Name": {
          "Fn::Sub": "${AWS::StackName}-SG-ID"
        }
      }
    }
  }
}